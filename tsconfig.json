{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "element-plus/global"
    ],
    "target": "ES6",
    "lib": ["dom", "esnext"],
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}